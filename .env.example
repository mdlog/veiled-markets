# ============================================================================
# VEILED MARKETS - Root Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# These variables are used for deployment and CLI operations
# ============================================================================

# =========================
# ALEO CREDENTIALS
# =========================

# Your Aleo private key for deployment and transactions
# IMPORTANT: Never commit your actual private key!
# Generate one with: snarkos account new
ALEO_PRIVATE_KEY=APrivateKey1...

# Your Aleo address (derived from private key)
ALEO_ADDRESS=aleo1...

# View key (for decrypting records)
ALEO_VIEW_KEY=AViewKey1...

# =========================
# NETWORK CONFIGURATION
# =========================

# Network to deploy to: testnet | mainnet
ALEO_NETWORK=testnet

# RPC endpoint (using Provable API v1 - stable and tested)
ALEO_RPC_URL=https://api.explorer.provable.com/v1

# Broadcast endpoint
ALEO_BROADCAST_URL=https://api.explorer.provable.com/v1/testnet/transaction/broadcast

# =========================
# DEPLOYMENT OPTIONS
# =========================

# Priority fee for transactions (in microcredits)
ALEO_PRIORITY_FEE=1000000

# Program name (without .aleo extension)
ALEO_PROGRAM_NAME=veiled_markets_v4

# =========================
# DEVELOPMENT
# =========================

# Enable verbose logging
DEBUG=false

# Local node URL (if running local devnet)
# ALEO_LOCAL_NODE=http://localhost:3030
